# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=.onrender.com,localhost,127.0.0.1

# Database Configuration
# For Render: Use DATABASE_URL (automatically provided by Render PostgreSQL)
# For local: Leave DATABASE_URL empty to use SQLite
DATABASE_URL=

# Optional: Local PostgreSQL (if you want to use PostgreSQL locally)
# Uncomment and configure these to use local PostgreSQL instead of SQLite
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=cohort_db
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_HOST=localhost
# DB_PORT=5432 

# CORS Settings - Add your frontend deployment URL
CORS_ALLOWED_ORIGINS=https://your-frontend-url.vercel.app,http://localhost:5173,http://localhost:5174

# Static & Media Files
STATIC_URL=/static/
STATIC_ROOT=staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=media

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Python Version (for Render)
PYTHON_VERSION=3.11.0
