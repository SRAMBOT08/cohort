# ================================================================
# Django Settings
# ================================================================
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=.onrender.com,.railway.app,.vercel.app,localhost,127.0.0.1

# ================================================================
# Database Configuration - SUPABASE
# ================================================================
# Option 1: Supabase Connection (RECOMMENDED for Production)
# Get this from: Supabase Dashboard → Settings → Database → Connection string (URI)
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# Option 2: Local PostgreSQL (Development Only)
# Uncomment and configure these if using local PostgreSQL
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=cohort_db
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_HOST=localhost
# DB_PORT=5432
# DB_SSLMODE=prefer

# Option 3: SQLite (Development Only)
# Leave DATABASE_URL empty and comment out DB_ENGINE to use SQLite

# ================================================================
# CORS Settings
# ================================================================
# Add your frontend deployment URLs (comma-separated, no spaces)
CORS_ALLOWED_ORIGINS=https://your-frontend-url.vercel.app,http://localhost:5173,http://localhost:5174

# ================================================================
# Static & Media Files
# ================================================================
STATIC_URL=/static/
STATIC_ROOT=staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=media

# ================================================================
# JWT Authentication Settings
# ================================================================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# ================================================================
# Redis Configuration (Optional - for WebSockets & Caching)
# ================================================================
# For local development
# REDIS_URL=redis://localhost:6379/0

# For production (e.g., Upstash, Redis Labs)
# REDIS_URL=redis://default:password@host:port

# ================================================================
# Python Version (for deployment platforms)
# ================================================================
PYTHON_VERSION=3.11.0

# ================================================================
# LinkedIn Integration (Optional - for IIPC module)
# ================================================================
# LINKEDIN_CLIENT_ID=your_linkedin_client_id
# LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
# LINKEDIN_REDIRECT_URI=https://yourdomain.com/iipc/callback

# ================================================================
# Email Configuration (Optional - for notifications)
# ================================================================
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-specific-password

# ================================================================
# Security Settings (Production Only)
# ================================================================
# Uncomment these for production deployment
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
